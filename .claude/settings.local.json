{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(swag init:*)",
      "Bash(sqlite3:*)",
      "Bash(pkill:*)",
      "Bash(true)",
      "Bash(DB_TYPE=postgres go run ./cmd/main.go)",
      "Bash(npm run lint)",
      "Bash(rm:*)",
      "Bash(npx tsc:*)"
    ],
    "deny": []
  },
  "mcpServers": {
    "browsermcp": {
      "command": "npx",
      "args": ["@browsermcp/mcp@latest"]
    }
  }
}