{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(swag init:*)",
      "Bash(sqlite3:*)",
      "Bash(pkill:*)",
      "Bash(true)"
    ],
    "deny": []
  },
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--headless",
        "--port",
        "8931"
      ]
    }
  }
}